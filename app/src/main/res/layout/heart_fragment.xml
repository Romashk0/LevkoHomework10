<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <View
            android:id="@+id/heart_HF"
            android:layout_width="@dimen/size_heart"
            android:layout_height="@dimen/size_heart"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_heart"
            android:layout_marginTop="@dimen/margin_heart"
            android:background="@drawable/ic_heart_real" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/margin_heart">

        <LinearLayout
            android:id="@+id/ll_visible_HF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/shape_parameters"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/sb_visible_HF"
                android:layout_width="@dimen/sb_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:max="100"
                android:progress="100" />

            <ImageView
                android:id="@+id/iv_visible_HF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_alpha" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_rotate_HF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_parameters"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/sb_rotate_HF"
                android:layout_width="@dimen/sb_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:max="100"
                android:progress="100" />

            <ImageView
                android:id="@+id/iv_rotate_HF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_rotate" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_scale_HF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_parameters"

            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/sb_scale_HF"
                android:layout_width="@dimen/sb_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:max="100"
                android:progress="100" />

            <ImageView
                android:id="@+id/iv_scale_HF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_scale" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>